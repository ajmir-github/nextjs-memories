datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Memory {
  // Required fields
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  tags     String[]
  location String
  caption  String
  images   String[]
  videos   String[]
  // Optional
  body     String?
  views    Int?     @default(0)

  // Date stamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // Relations
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId
  commnets  Comment[]
}

model User {
  // Required fields
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  name      String
  // Optional
  profile   String?
  views     Int?     @default(0)
  // Date stamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  memories  Memory[]
}

model Comment {
  // Required fields
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String
  // Optional
  // Date stamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  memory    Memory   @relation(fields: [memoryId], references: [id])
  memoryId  String   @db.ObjectId
}
